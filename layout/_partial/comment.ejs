<% if (page.comments){ %>
<section id="comments">
  <h1 class="title"><%= __('comment') %></h1>

  <% if (theme.comment_provider == "facebook") {
      if (theme.facebook) { %>
      <%- partial('_partial/facebook_comment', {fbConfig: theme.facebook}) %>
      <% } %>
  <% } else if(theme.comment_provider == "disqus" && config.disqus_shortname) { %>
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
  <% } else if(config.duoshuo_shortname){ %>
    <!-- Duoshuo Comment BEGIN -->
    <div class="ds-thread" data-title="<%= page.title %>" data-thread-key="<%= page.slug %>" data-author-key="guoyukun" data-url="<%- config.url %>/post/<%- page.slug %>"></div>
  <%}%>
</section>
<% } %>